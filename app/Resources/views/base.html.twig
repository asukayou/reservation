<!DOCTYPE html>
<html lang="ja">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}{{ title_name | trans }}{% endblock %}</title>
        <link href="{{ asset('css/jquery.dataTables.min.css') }}" rel="stylesheet" />
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" />
        <link href="{{ asset('css/bootswatch.min.css') }}" rel="stylesheet" />
        <link href="{{ asset('css/sticky-footer-navbar.css') }}" rel="stylesheet" />
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div id="menu" class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-collapse collapse navbar-responsive-collapse">
                    <ul class="nav navbar-nav">
                        {% block navbar_left %}{% endblock %}
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        {% block navbar_right %}{% endblock %}
                    </ul>
                </div>
            </div>
        </div>
        <div id="main">
            <div class="container">
                {% block main %}{% endblock %}
            </div>
        </div>
        <div class="footer">
            <div class="container">
                <p class="text-muted">
                    {% block footer %}{% endblock %}
                </p>
            </div>
        </div>
        <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
        <script src="{{ asset('js/jquery.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/jquery.dataTables.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}" type="text/javascript"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
