{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/ayreservation/css/reservation.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block main %}
    <div>
        <div>
            <h3 class="page-header">{{ title_name | trans }}</h3>
        </div>
        <div class="ay-content">
            {% block content %}{% endblock %}
        </div>
    </div>

{% endblock %}

{% block footer %}
    {{ 'Reservation System' | trans }} - created by Asuka You
{% endblock %}

{% block navbar_left %}
    {{ parent() }}
    <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-dashboard"></span> {{ 'General' | trans }} <span class="caret"></span></a>
        <ul class="dropdown-menu">
        </ul>
    </li>
    <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-cog"></span> {{ 'Administration' | trans }} <span class="caret"></span></a>
        <ul class="dropdown-menu">
            <li><a href="{{ path('facility_index') }}">{{ 'Manage Facility' | trans }}</a></li>
        </ul>
    </li>
{% endblock %}
